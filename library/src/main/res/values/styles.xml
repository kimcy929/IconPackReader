<resources>

    <!-- Base application theme. -->
    <style name="BaseIconPackReaderTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseIconPackReaderTheme.IconPackTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
    </style>

    <!--Dialog style-->
    <style name="AlertDialogIconPackReaderStyle" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:background">@color/colorWindowBackground</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
